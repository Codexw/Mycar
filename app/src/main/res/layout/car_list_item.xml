<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:minHeight="60dp"
    android:gravity="center_vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/car_list_radiobutton"
        android:id="@+id/car_list_linearlyaout">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/car_list_number"
            android:textSize="16dp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="已选中"
            android:layout_toRightOf="@+id/car_list_number"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:visibility="visible"
            android:id="@+id/selectstate" />
    </LinearLayout>

    <RadioButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:id="@+id/car_list_radiobutton" />


</RelativeLayout>