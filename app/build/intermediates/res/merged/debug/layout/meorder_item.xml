<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    >

    <TextView
        android:id="@+id/order_item_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="加油站名称"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/order_item_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/order_item_text1"
        android:gravity="center"
        android:text="车油类型"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/order_item_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="订单状态"
        android:textSize="18dp"/>

    <TextView

        android:id="@+id/order_item_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/order_item_text1"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:paddingRight="5dp"
        android:text="时间"
        android:textSize="10dp"/>
</RelativeLayout>